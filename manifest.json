{
  "manifest_version": 3,
  "name": "Insightify",
  "version": "0.2.0",
  "description": "AI-powered Amazon review insights (WIP)",
  "permissions": ["tabs", "scripting"],
  "action": {
    "default_title": "Insightify",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*", "*://amazon.com/*"],
      "js": [
        "content/scraper.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["*://*.amazon.com/*", "*://amazon.com/*"]
}

